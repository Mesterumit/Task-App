{{#each tasks}}

<div class="card card-body my-1 {{#if isCompleted}} completed{{/if}}">
    <div class="d-flex justify-content-between align-items-center">
        <a class="d-flex flex-column flex-grow-1" href="/toggle/{{_id}}">
            <h3>{{title}}</h3>
            <div>
                <span>{{createdAt}}</span>
                <span class="badge {{#if low }} bg-success {{/if}} {{#if medium }} bg-warning {{/if}} {{#if heigh }} bg-danger {{/if}}"> {{priority}}</span>
            </div>
        </a>

        <div>
            <a href="/edit/{{_id}}" class="btn btn-warning">Edit</a>
            <a href="/delete/{{_id}}" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>

{{else}}
    <h3 class="text-center"> No Tasks yet, add one !</h3>
{{/each}}
